<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TicTacToe"
    android:onClick="onClick">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Tic-Tac-Toe"
        android:id="@+id/T1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/T2"
        android:layout_below="@+id/T1"
        android:layout_centerHorizontal="true" />

    <Button

        android:layout_width="75dp"
        android:layout_height="75dp"
        android:width="64dp"
        android:height="64dp"
        android:id="@+id/B1"
        android:layout_above="@+id/B4"
        android:layout_alignLeft="@+id/T1"
        android:layout_alignStart="@+id/T1"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B2"
        android:layout_alignTop="@+id/B1"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B3"
        android:layout_alignTop="@+id/B2"
        android:layout_alignRight="@+id/T1"
        android:layout_alignEnd="@+id/T1"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B4"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/B1"
        android:layout_alignStart="@+id/B1"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B6"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/B3"
        android:layout_alignEnd="@+id/B3"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B7"
        android:layout_below="@+id/B4"
        android:layout_alignLeft="@+id/B4"
        android:layout_alignStart="@+id/B4"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B8"
        android:layout_alignBottom="@+id/B7"
        android:layout_centerHorizontal="true"
        android:onClick="onClick" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/B9"
        android:layout_alignBottom="@+id/B7"
        android:layout_alignRight="@+id/B6"
        android:layout_alignEnd="@+id/B6"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/BR"
        android:layout_below="@+id/B7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:onClick="reset" />

</RelativeLayout>
